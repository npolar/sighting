/*Tables */
.stripes {
    width: 100%;
    border-collapse: collapse;
    border-spacing: 0;
}
/*Zebra striping*/
tr:nth-of-type(odd) {
  background: #eee;
}
th {
  background: #333;
  color: white;
  font-weight: bold;
}
td, th {
  padding: 6px;
  border: 1px solid #ccc;
  text-align: left;
}


