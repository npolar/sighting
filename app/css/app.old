/* Menu, second level */
.second-level-menu
{
    position: absolute;
    top: 195px;
    left: 170px;
    width: 150px;
    list-style: none;
    padding: 0;
    margin: 0;
}

.second-level-menu > li:hover { display:block; }


/* Nav menu */
nav ul  {
        display: none;
        position: absolute;
        padding: 20px;
        background: #fff;
        border: 1px solid #4C8FEC;
        left: 20px;
        top: 60px;
        width: 150px;
        border-radius: 4px 0 4px 4px;
        list-style-type: none;
}
nav li {
        text-align: center;
        width: 100%;
        padding: 10px 0;
        margin: 0;
}

nav:hover ul {
        display: block;
}

nav:visited ul  {
        display: none;
}


